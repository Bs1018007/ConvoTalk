{
  "name": "convotalk2",
  "version": "1.0.0",
  "description": "ConvoTalk Chat Application",
  "main": "index.js",
  "scripts": {
    "install-frontend": "cd frontend && npm install --legacy-peer-deps",
    "install-backend": "cd backend && npm install",
    "build-frontend": "cd frontend && npm run build",
    "build": "npm install && npm run install-frontend && npm run install-backend && npm run build-frontend",
    "start": "cd backend && node index.js",
    "dev": "concurrently \"cd backend && npm run dev\" \"cd frontend && npm run dev\"",
    "frontend": "cd frontend && npm run dev",
    "backend": "cd backend && npm run dev"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
